#!/bin/sh

INCLUDE=
LIB=
LINK=
LINKCPP=
DEF=
VERSION=
DEPENDENCY=

while [ "$1" != "" ]
do
  case $1 in
  -I)
    shift; INCLUDE=$1; shift
    ;;
  -L)
    shift; LIB=$1; shift
    ;;
  -l)
    shift; LINK=$1; shift
    ;;
  -lcpp)
    shift; LINKCPP=$1; shift
    ;;
  -D)
    shift; DEF=$1; shift
    ;;
  -v)
    shift; VERSION=$1; shift
    ;;
  -dep)
    shift; DEPENDENCY=$1; shift
    ;;
  *)
    ;;
  esac
done

echo "# This script was automatically generated by zeda-config-gen in ZEDA."
echo "# `date` "by "`whoami`"

echo "#!/bin/sh"
echo "case \$1 in"
if [ "$INCLUDE" != "" ]; then
  echo "-I)"
  echo "  echo $INCLUDE"
  echo "  ;;"
fi
if [ "$LIB" != "" ]; then
  echo "-L)"
  echo "  echo $LIB"
  echo "  ;;"
fi
if [ "$DEF" != "" ]; then
  echo "-D)"
  echo "  echo $DEF"
  echo "  ;;"
fi
if [ "$INCLUDE" != "" ] || [ "$LIB" != "" ] || [ "$DEF" != "" ]; then
  echo "--cflags)"
  echo "  echo $INCLUDE $LIB $DEF"
  echo "  ;;"
fi
if [ "$LINK" != "" ]; then
  echo "-l)"
  echo "  echo $LINK"
  echo "  ;;"
fi
if [ "$LINKCPP" != "" ]; then
  echo "-lcpp)"
  echo "  echo $LINKCPP"
  echo "  ;;"
fi
if [ "$VERSION" != "" ]; then
  echo "-v)"
  echo "  echo $VERSION"
  echo "  ;;"
fi
if [ "$DEPENDENCY" != "" ]; then
  echo "--dep)"
  echo "  echo $DEPENDENCY"
  echo "  ;;"
fi
echo "*)"
echo "  ;;"
echo "esac"
echo "exit 0"
